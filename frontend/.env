# URL de l'API backend (DEV)
VITE_API_URL=http://localhost:5000/api
VITE_USE_MOCK_API=true

# URL de l'API backend (PROD) — à remplacer sur le serveur
# VITE_API_URL=https://api.orientmada.mg/api

# Nom de l'application (affichage dans le frontend)
VITE_APP_NAME=OrientMada

# Thème par défaut (light/dark)
VITE_APP_THEME=light

# Max upload pièces jointes (MB)
VITE_MAX_UPLOAD_MB=10

# Quotas / pagination
VITE_DEFAULT_PAGE_SIZE=20

# Notifications
VITE_ENABLE_EMAIL_NOTIFS=false

# Clé API externe (si tu veux intégrer une IA, ex: DeepSeek ou Gemini)
# VITE_AI_API_KEY=

# Mode debug / logs (true/false)
VITE_DEBUG=true
